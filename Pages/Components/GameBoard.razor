@switch (_game.Status)
{
    case Status.New:
        <Setup OnStart="_game.Start" />
        break;

    case Status.Ongoing:
        <Match Player="_game.CurrentPlayer" Limits="_game.Limits" CheckFunc="_game.Check" OnContinue="_game.Continue" OnEnd="_game.End"  />
        break;

    case Status.Ended:
        <End Loser="_game.Loser" OnRestart="Restart" />
        break;

    default:
        break;
}


@code {
    private Game _game = new Game();

    private void Restart() => _game = new Game();
}
