@switch (_game.Status)
{
    case Status.New:
        <Setup OnStart="_game.Start" />
        break;

    case Status.Ongoing:
        <Match Player="_game.CurrentPlayer"
               History="_game.History"
               InitialLimits="_game.InitialLimits"
               MatchLimits="_game.MatchLimits"
               Secret="_game.Secret"
               CheckFunc="_game.Check"
               OnContinue="_game.Continue"
               OnEnd="_game.End" />
        break;

    case Status.Ended:
        <End Secret="_game.Secret" Loser="_game.Loser" OnRestart="Restart" />
        break;

    default:
        break;
}


@code {
    private Game _game = new Game();

    private void Restart() => _game = new Game();
}
