<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">
                Fine del gioco
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>

        <MudText>
            @(Loser is null ? "Hai perso!" : $"{Loser} ha perso!")
        </MudText>

        <MudText>
            Il numero era...
        </MudText>

        <MudText Typo="Typo.h6">
            @Secret
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled"
                   Color="@Color.Primary"
                   FullWidth="true"
                   StartIcon="@Icons.Material.Filled.Refresh"
                   OnClick="OnRestart">
            Nuova partita
        </MudButton>
    </MudCardActions>
</MudCard>





@code
{
    [Parameter, EditorRequired]
    public int Secret { get; set; }

    [Parameter, EditorRequired]
    public Player? Loser { get; set; }

    [Parameter, EditorRequired]
    public EventCallback OnRestart { get; set; }
}