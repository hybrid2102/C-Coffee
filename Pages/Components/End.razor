<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">
                Fine del gioco
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>

        <MudStack>
            <MudText>
                @if (Loser is null)
                {
                    <MudText>
                        Hai perso!
                    </MudText>
                }
                else
                {
                    <MudText>
                        <PlayerChip Player="Loser" />
                        ha perso!
                    </MudText>
                }
            </MudText>

            <MudText>
                Il numero era...
            </MudText>

            <MudText Typo="Typo.h6">
                @Secret
            </MudText>
        </MudStack>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled"
                   Color="@Color.Primary"
                   FullWidth="true"
                   StartIcon="@Icons.Material.Filled.Refresh"
                   OnClick="OnRestart">
            Nuova partita
        </MudButton>
    </MudCardActions>
</MudCard>





@code
{
    [Parameter, EditorRequired]
    public int Secret { get; set; }

    [Parameter, EditorRequired]
    public Player? Loser { get; set; }

    [Parameter, EditorRequired]
    public EventCallback OnRestart { get; set; }
}