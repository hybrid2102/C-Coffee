@if (Loser is null)
{
    <p>Hai perso!</p>
}
else
{
    <p>@Loser ha perso!</p>
}

<MudButton OnClick="OnRestart">Nuova partita</MudButton>

@code
{
    [Parameter, EditorRequired]
    public Player? Loser { get; set; }

    [Parameter, EditorRequired]
    public EventCallback OnRestart { get; set; }
}