<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">
                Cronologia
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTimeline TimelinePosition="TimelinePosition.Left">
            @foreach (var e in Events)
            {
                <MudTimelineItem>
                    @if (!string.IsNullOrWhiteSpace(e.Message))
                    {
                        <MudText>
                            @e.Message
                        </MudText>
                    }
                    else if (e.Player is null)
                    {
                        <MudText>
                            Hai scommesso @e.Bet
                        </MudText>
                    }
                    else if (e.Bet is not null)
                    {
                        <MudText>
                            <PlayerChip Player="e.Player" />
                            ha scommesso @e.Bet
                        </MudText>
                    }
                </MudTimelineItem>
            }
        </MudTimeline>
    </MudCardContent>
</MudCard>



@code {
    [Parameter, EditorRequired]
    public required List<Event> Events { get; set; }
}
