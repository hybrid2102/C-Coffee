<MudChip T="string" Size="Size.Large">
    <AvatarContent>
        @* <MudAvatar>@Player.Name?[0..2].ToUpper()</MudAvatar> *@
        <MudAvatar>
            <MudImage Src="@($"https://anonymous-animals.azurewebsites.net/avatar/{Player.Name}")" />
        </MudAvatar>
    </AvatarContent>
    <ChildContent>@Player</ChildContent>
</MudChip>
@code {
    [Parameter, EditorRequired]
    public required Player Player { get; set; }
}
